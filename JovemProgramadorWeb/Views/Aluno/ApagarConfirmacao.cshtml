@model Aluno
@{
    ViewData["Title"] = "Confirmação apagar aluno";
}

<div class="text-center">
    <h3>Realmente deseja apagar o aluno (@Model.nome)?</h3>

</div>

<a class="btn btn-primary btn-block" asp-controller="Aluno" asp-action="Index" role="button">Cancelar exclusão</a>
<a class="btn btn-danger btn-block" asp-controller="Aluno" asp-action="Apagar" asp-route-id="@Model.id" role="button">Confirmar exclusão</a>