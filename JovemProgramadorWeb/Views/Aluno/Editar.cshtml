@model Aluno
<div class="text-center">
    <h1 class="text-black center">Editar Aluno</h1>
    </div>

<form asp-controller="Aluno" asp-action="Alterar" method="post">
    <input type="hidden" asp-for="id" />
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" asp-for="nome" class="form-control" >
    </div>

     <div class="form-group">
        <label for="idade">Idade</label>
        <input type="text" asp-for="idade" class="form-control" >
    </div>

    <div class="form-group">
        <label for="matricula">Matrícula</label>
        <input type="text" asp-for="matricula" class="form-control">
    </div>

    <div class="form-group">
        <label for="cep">CEP</label>
        <input type="text" asp-for="cep" class="form-control" >
    </div>
    

    <button type="submit" class="btn btn-primary">Alterar</button>
    <a class="btn btn-secondary" asp-controller="Aluno" asp-action="Index" role="button">Voltar</a>
</form>