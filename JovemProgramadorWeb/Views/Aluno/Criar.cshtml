@model Aluno
<div class="text-center">
    <h1 class="text-black center">Adicionar Aluno</h1>
    </div>

<form asp-controller="Aluno" asp-action="InserirAluno" method="post">
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" asp-for="nome" class="form-control" placeholder="Digite o nome">
    </div>

     <div class="form-group">
        <label for="idade">Idade</label>
        <input type="text" asp-for="idade" class="form-control" placeholder="Digite a idade">
    </div>

    <div class="form-group">
        <label for="matricula">Matrícula</label>
        <input type="text" asp-for="matricula" class="form-control" placeholder="Digite o número da matrícula">
    </div>

    <div class="form-group">
        <label for="cep">CEP</label>
        <input type="text" asp-for="cep" class="form-control" placeholder="Digite o CEP">
    </div>
    

    <button type="submit" class="btn btn-primary">Adicionar</button>
    <a class="btn btn-secondary" asp-controller="Aluno" asp-action="Index" role="button">Voltar</a>
</form>