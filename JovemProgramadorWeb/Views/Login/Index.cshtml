@{
    Layout = "_LayoutDeslogado";
}

@model Login

@if (TempData["MsgErro"] != null)
{
    <div class="alert-danger">
        @TempData["MsgErro"]
    </div>
}
<form class="row g-3" asp-controller="Login" asp-action="BuscaLogin">
    <div class="col-md-6">
        <label for="inputEmail4" class="form-label">Usuário</label>
        <input type="email" class="form-control" id="inputEmail4" asp-for="email">
        <label for="inputEmail4" class="form-label">Senha</label>
        <input type="password" class="form-control" id="inputPassword4" asp-for="senha">
        
    </div>

    <div class="col-12">
        <button class="btn btn-primary col-1" role="button" >Entrar</button>
    </div>
</form>

